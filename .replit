modules = ["nodejs-20", "web", "python-3.11", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = [
  "cairo",
  "cargo",
  "ffmpeg-full",
  "freetype",
  "ghostscript",
  "glibcLocales",
  "gobject-introspection",
  "gtk3",
  "lcms2",
  "libiconv",
  "libimagequant",
  "libjpeg",
  "libtiff",
  "libwebp",
  "libxcrypt",
  "openjpeg",
  "pkg-config",
  "qhull",
  "rapidfuzz-cpp",
  "rustc",
  "taskflow",
  "tcl",
  "tk",
  "yt-dlp",
  "zlib",
]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3.11 -m backend.app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5000

[[ports]]
localPort = 36879

[[ports]]
localPort = 38633

[[ports]]
localPort = 38827

[[ports]]
localPort = 43119

[[ports]]
localPort = 44175

[deployment]
deploymentTarget = "cloudrun"
run = [
  "gunicorn",
  "--bind",
  "0.0.0.0:5000",
  "--workers",
  "2",
  "--timeout",
  "120",
  "backend.app:create_app()",
]
build = ["npm", "run", "build"]
